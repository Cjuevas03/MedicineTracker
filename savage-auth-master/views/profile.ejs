<!doctype html>
<html>
<head>
    <title>Medicine

    </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <script src="https://kit.fontawesome.com/58eb5e6d41.js" crossorigin="anonymous"></script>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Medicine List</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
      <div>
        <form action="/saveMedicine" method="POST">
          <input type="text" name="name" placeholder="What Medicine?">
          <select name="freqOfMedicine" id="">
            <option value="1">Once</option>
            <option value="2">Twice</option>
            <option value="3">Thrice</option>
          </select>
            <button type="submit">Submit</button>
          </form>
          
        <ul>
          <span>Medicine List</span>
          <% for(var i=0; i<medicineList.length; i++) {%>
            <li class="makeCenter">
              <span class="medicineName"><%=medicineList[i].name %></span>
              <span class="freqOfMedicine"><%=medicineList[i].type%> times per week</span>
              <span><i data-id="<%=medicineList[i]._id %>" class="fa fa-trash" aria-hidden=""></i></span>
              <span><button class="taken" title=""><i data-count="<%=medicineList[i].type%>" data-id="<%=medicineList[i]._id %>" class="fa fa-check-square"></i></button></span>
            </li>
            <% } %>
        </ul></form>  
      </div>
    </div>
</div>

<script src="main.js"></script>

</body>
</html>
